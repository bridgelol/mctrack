{
  "name": "@mctrack/db",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./postgres": {
      "types": "./dist/postgres/index.d.ts",
      "import": "./dist/postgres/index.js"
    },
    "./clickhouse": {
      "types": "./dist/clickhouse/index.d.ts",
      "import": "./dist/clickhouse/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "generate": "drizzle-kit generate",
    "migrate": "drizzle-kit migrate",
    "migrate:ch": "tsx src/clickhouse-migrate.ts",
    "migrate:all": "pnpm run migrate && pnpm run migrate:ch",
    "push": "drizzle-kit push",
    "studio": "drizzle-kit studio",
    "seed": "tsx src/seed.ts",
    "setup": "pnpm run migrate:all && pnpm run seed"
  },
  "dependencies": {
    "@clickhouse/client": "^1.14.0",
    "drizzle-orm": "^0.44.7",
    "postgres": "^3.4.7"
  },
  "devDependencies": {
    "bcrypt": "^5.1.1",
    "@types/bcrypt": "^5.0.2",
    "drizzle-kit": "^0.31.7",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "@mctrack/shared": "workspace:*"
  }
}
